<div id="location-controls">
    <a id="add-location" href="/locations/city-search" title="Add Location">
        <i class="fa-solid fa-2x fa-plus"></i>
    </a>
</div>
{{#each weather}}
<a class="weather-tile-link" href="/daily/{{_location._id}}">
    <div class="weather-tile">
        <img class="weather-icon" src="{{current._imgUrl}}" alt="weather">
        <h3>{{_location.name}}, {{_location.state}}, {{_location.country}}</h3>
        <p class="temperature">{{round current.temp _units}}&deg;{{getTempUnit _units}}</p>
        <!--{{#if current.rain}}
        <strong>
            <p>Rain</p>
        </strong>
        {{/if}}-->
        <table class="weather-tile-table">
            <tr>
                <td><strong>{{capitalize current.weather.0.description}}</strong></td>
                <td>Uvi: {{ current.uvi}}</td>
            </tr>
            <tr>
                <td>Feels Like: {{round current.feels_like _units}}&deg;{{getTempUnit _units}}</td>
                <td>Humidity: {{current.humidity}}%</td>
                
            </tr>
            <tr>
                <td>Visibility: {{current.visibility}}m</td>
                <td>Dew Point: {{round current.dew_point}}&deg;{{getTempUnit _units}}</td>
            </tr>
            <tr>
                <td>
                    <p><i class="fa-solid fa-wind"></i>&nbsp;{{getWindDirection current.wind_deg}}&nbsp;{{round current.wind_speed}}{{getSpeedUnit _units}}</p>
                </td>            
                <td>Pressure: {{current.pressure}}hPa</td>
            </tr>
        </table>
        <a class="remove-location" title="Remove Location" href="/locations/remove-location/{{_location._id}}"><i
                class="fa-solid fa-trash"></i></a>
    </div>
</a>
{{/each}}