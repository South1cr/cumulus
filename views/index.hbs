<div id="location-controls">
    <a id="add-location" href="/locations/city-search" title="Add Location">
        <i class="fa-solid fa-2x fa-plus"></i>
    </a>
</div>
{{#each weather}}
<a class="weather-tile-link" href="/details/{{_location._id}}">
    <div class="weather-tile">
        <img class="weather-icon" src="{{current._imgUrl}}" alt="weather">
        <h3>{{_location.name}}, {{_location.state}}, {{_location.country}}</h3>
        <p class="temperature">{{round current.temp}}&deg;F</p>
        {{#if current.rain}}
            <strong><p>Rain</p></strong>
        {{/if}}
        <p>Feels Like: {{round current.feels_like}}&deg;F</p>
        <p>Humidity: {{current.humidity}}%</p>
        <p>Uvi: {{current.uvi}}</p>
        <p><i class="fa-solid fa-wind"></i> {{round current.wind_speed}}mph</p>
        <a class="remove-location" title="Remove Location" href="/locations/remove-location/{{_location._id}}"><i
                class="fa-solid fa-trash"></i></a>
    </div>
</a>
{{/each}}
